# === Build ===
$(bld_DIR)/$(bld_NAME): # sub
	@mkdir -p $(bld_DIR)
	@echo "--- Linking Build ---"
	$(comp) $(OBJ) $(flag) $(inc) $(link) -o $(bld_DIR)/$(bld_NAME)

